#include <stdio.h>

int main()
{
    int st1,lb1,oz1;
    printf("input first weight:(st,lb,oz)");
    scanf("%d,%d,%d",&st1,&lb1,&oz1);
    
    int st2,lb2,oz2;
    printf("input second weight:(st,lb,oz)");
    scanf("%d,%d,%d",&st2,&lb2,&oz2);
    
    printf("%10s%6s%6s%6s\n","","st","lb","oz");
    printf("=================================\n");
    printf("%10s%6d%6d%6d\n","weight1",st1,lb1,oz1);
    printf("%10s%6d%6d%6d\n","weight2",st2,lb2,oz2);
    
    printf("=================================\n");
    printf("%10s%6d%6d%6d\n","sum",st1+st2,lb1+lb2,oz1+oz2);
    
    int sum_st=st1+st2;
    int sum_lb=lb1+lb2;
    int sum_oz=oz1+oz2;
    int count=2;
    float mean_st= (float) sum_st/count;
    float mean_lb= (float) sum_lb/count;
    float mean_oz= (float) sum_oz/count;
    printf("%10s%6.1f%6.1f%6.1f\n","average",mean_st,mean_lb,mean_oz);

    return 0;
}
